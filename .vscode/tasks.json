{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash & Verify (OpenOCD)",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "init",
                "-c",
                "reset halt",
                "-c",
                "flash erase_sector 0 0 last", // erase command
                "-c",
                "program ${workspaceFolder}/build/Debug/car.elf verify reset exit",
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Erase Flash (OpenOCD)",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32f1x.cfg",
                "-c",
                "init",
                "-c",
                "reset halt",
                "-c",
                "flash erase_sector 0 0 last", // erase command
                "-c",
                "shutdown",
            ],
            "problemMatcher": [
                "$gcc"
            ],
        }
    ]
}